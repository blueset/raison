<%- include('../templates/head') %>
<%- include('../components/navbar', {theme: "dark", section: {name: "Interaction", url: "/startups"}}) %>

<div id="startup-project-content" class="container">
    <div class="title">
        <h1><%= locals.interaction.title %></h1>
    </div>

    <div class="author">
        <img class='author-avatar' src="<%= author.image %>" alt="">
        <div class="author-info"> <%= author.name %><br> <%= interaction.datePosted.toDateString()%></div>
    </div>
    <div class="description article-content">
        <img class="featuring-image" width="100%" src="<%= interaction.banner %>" alt="First slide">
        <%- interaction.desc %>
    </div>


    <div class="information">
        <section class="information-section" id="investor-information">
            <div class="investor-information-entry">
                <div class="title">Status</div>
                <% if (interaction.investor) {%>
                <div class="content">Implemented </div>
                <% } else { %>
                <div class="content"> In progress </div>
                <% } %>
            </div>
            <div class="investor-information-entry">
                <div class="title"> Location </div>
                <div class="content"> <%= interaction.location %> </div>
            </div>
            <% if (interaction.investor) {%>
                <div class="investor-information-entry">
                    <div class="title">Invested By</div>
                    <img src="<%= investor.image %>" style="border-radius: 50%" class="picture" alt="Company Logo">
                <div class="content"> <%= investor.name %> </div>
            </div>
            <% } %>

        </section>
        <section class="actions">
            <button class="mdc-button mdc-button--raised primary-action-button">
                <i class="mdc-button__icon mdi mdi-star-outline"></i>
                Add to favorites
            </button>
            <button class="mdc-button mdc-button--raised secondary-action-button">
                <i class="mdc-button__icon mdi mdi-message-reply-text"></i>
                Request contact details
            </button>
        </section>
        <section class="information-section">
            <h2>About the author</h2>
            <div class="mdc-typography--body1">
                <p>
                    <%= author.bio %>
                </p>
            </div>
        </section>
        <section class="information-section">
            <h2>Comments</h2>
            <%- include('../components/comments') %>
        </section>
    </div>
</div>

<%- include('../components/footer') %>
<%- include('../templates/foot') %>