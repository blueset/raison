<div class="mdc-snackbar" id="snackbar"
     aria-live="assertive"
     aria-atomic="true"
     aria-hidden="true">
  <div class="mdc-snackbar__text"></div>
  <div class="mdc-snackbar__action-wrapper">
    <button type="button" class="mdc-snackbar__action-button"></button>
  </div>
</div>

<script>
    var snackbar = new mdc.snackbar.MDCSnackbar(document.querySelector("#snackbar"));
    var alert = (message, confirm, callback) => {
        snackbar.show({
            message: message,
            actionText: confirm || 'OK',
            actionHandler: callback || function () {
            }
        });
    };
</script>