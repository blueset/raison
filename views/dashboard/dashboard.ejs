<%- include('../templates/head') %>
<%- include('navbar') %>

<div class="dashboard-content container">
    <%- include('nav-aside', {path: 'dashboard'}) %>
    <div class="content">
        <div class="numbers">
            <div class="number-card mdc-card" id="projects">
                <a href="/dashboard/projects" class="mdc-card__primary-action">
                    <div class="number"><%= user.projects.length %></div>
                    <div class="name">Projects</div>
                </a>
            </div>
            <div class="number-card mdc-card" id="feeds">
                <div class="number">42</div>
                <div class="name">Feeds</div>
            </div>
            <div class="number-card mdc-card" id="likes">
                <div class="number">233</div>
                <div class="name">Likes</div>
            </div>
        </div>
        <section>
            <h1>Recent activities</h1>
            <ul class="recent-activities">
                <li>
                    <img src="<%= user.image %>" class="avatar"
                         alt="Person Name">
                    <strong>You</strong> liked Christopher Thomas’s share “Lorem ipsum dolor sit amet”.
                </li>
                <li>
                    <img src="<%= user.image %>"" class="avatar"
                         alt="Person Name">
                    <strong>You</strong> liked your share “Lorem ipsum dolor sit amet”.
                </li>
            </ul>
        </section>
    </div>
</div>

