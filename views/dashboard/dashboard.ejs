<%- include('../templates/head') %>
<%- include('navbar') %>

<div class="dashboard-content container">
    <%- include('nav-aside', {path: 'dashboard'}) %>
    <div class="content">
        <div class="numbers">
            <div class="number-card mdc-card" id="projects">
                <a href="/dashboard/projects" class="mdc-card__primary-action">
                    <div class="number"><%= user.projects.length %></div>
                    <div class="name">Projects</div>
                </a>
            </div>
            <div class="number-card mdc-card" id="feeds">
                <a href="#!" class="mdc-card__primary-action">
                    <div class="number">42</div>
                    <div class="name">Offers</div>
                </a>
            </div>
            <div class="number-card mdc-card" id="likes">
                <a href="#!" class="mdc-card__primary-action">
                    <div class="number">5</div>
                    <div class="name">Accepted</div>
                </a>
            </div>
        </div>
        <section>
            <h1>Recent activities</h1>
            <ul class="recent-activities">
                <% for (var i = 0; i < user.activity.length; i++) {%>
                <li>
                    <img src="<%= user.image %>" class="avatar"
                         alt="Person Name">
                        <%- user.activity[i].content %>
                    - <%= user.activity[i].time.toDateString()%>
                </li>
                <% } %>
            </ul>
        </section>
    </div>
</div>

<% if (locals.message) { %>
<script>
    snackbar.show({
        message: "<%= locals.message %>",
        actionText: "Dismiss",
        actionHandler: () => {}
    });
</script>
<% } %>

<%- include('../components/footer') %>
<%- include('../templates/foot') %>