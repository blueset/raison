<%- include('../templates/head') %>
<%- include('navbar') %>

<div class="dashbaord-content container">
    <%- include('nav-aside', {path: 'projects'}) %>
    <div class="content">
        <section>
            <div class="title-row">
                <h1>My projects</h1>
                <a href="#!" class="mdc-button mdc-button--raised">Create</a>
            </div>
            <ul class="mdc-list table-list">
                <li class="mdc-list-item no-ripple title-row">
                    <span class="title">Title</span>
                    <span class="time">Time</span>
                </li>
                <% for (var i = 0; i < projects.length; i++) { %>

                <li class="mdc-list-item no-ripple">
                    <span class="title">
                         <a href="/project/<%= projects[i].id %>">
                        <%= projects[i].title %>
                         </a>
                    </span>
                    <span class="time">6 Dec</span>
                </li>
                <% } %>

            </ul>
        </section>
    </div>
</div>

<%- include('../components/footer') %>
