<%- include('templates/head') %>
<%- include('components/navbar', {theme: "dark", section: {name: "Search", url: "/search"}, state: "Search"}) %>

<div class="container">
    <div id="search-body">
        <form action="/search" class="search-controllers">
            <div id="search-query-form-control" class="mdc-form-control">
                <div class="mdc-text-field mdc-text-field--with-trailing-icon">
                    <input type="text" name="query" id="search-keyword" class="mdc-text-field__input" value="<%= locals.userInput && locals.userInput.query || '' %>">
                    <label class="mdc-floating-label" for="search-keyword">Search keywords</label>
                    <i class="mdc-text-field__icon" tabindex="0"><i class="mdi mdi-magnify"></i></i>
                    <div class="mdc-line-ripple"></div>
                </div>
            </div>
            <div class="search-filter-form-control mdc-form-control">
                <div class="mdc-select">
                    <select class="mdc-select__native-control">
                        <option value="AU" selected>üìç Australia</option>
                        <option value="ALL">Worldwide</option>
                        <option value="AS">Asia</option>
                        <option value="EU">Europe</option>
                        <option value="NA">North America</option>
                        <option value="SA">South America</option>
                        <option value="AF">Africa</option>
                        <option value="OC">Oceania</option>
                        <option value="AN">Antarctica</option>
                    </select>
                    <div class="mdc-select__label mdc-select__label--float-above">Region</div>
                    <div class="mdc-select__bottom-line"></div>
                </div>
            </div>
            <div class="search-filter-form-control mdc-form-control">
                <div class="mdc-select">
                    <select class="mdc-select__native-control">
                        <option value="ALL">All topics</option>
                    </select>
                    <div class="mdc-select__label mdc-select__label--float-above">Topic</div>
                    <div class="mdc-select__bottom-line"></div>
                </div>
            </div>
            <div class="search-filter-form-control mdc-form-control">
                <div class="mdc-select">
                    <select name="time" class="mdc-select__native-control">
                        <option value="65536" selected>All time</option>
                        <option value="1">Today</option>
                        <option value="7">This week</option>
                        <option value="30">This month</option>
                        <option value="365">This year</option>
                    </select>
                    <div class="mdc-select__label mdc-select__label--float-above">Time</div>
                    <div class="mdc-select__bottom-line"></div>
                </div>
            </div>
            <div class="search-filter-form-control mdc-form-control">
                <div class="mdc-select">
                    <select name="sort" class="mdc-select__native-control">
                        <option value="REL" selected>By relevance</option>
                        <option value="TIME">By time</option>
                        <option value="LIKE">By likes</option>
                        <option value="COMMENT">By comments</option>
                    </select>
                    <div class="mdc-select__label mdc-select__label--float-above">Sort order</div>
                    <div class="mdc-select__bottom-line"></div>
                </div>
            </div>
        </form>
        <% for (let i of locals.projects) { %>
        <%- include('components/detail-card', {
            image: i.banner,
            title: i.title,
            summary: i.desc,
            author: {
                name: i.author.name,
                avatar: i.image
            },
            url: "/startups/" + i.id
        }) %> 
        <% } %>
        <%- include('components/pagination', {total: 1, current: 1, url: "/search?page="}) %>
    </div>
    
</div>
<%- include('components/footer') %>
<%- include('templates/foot') %>